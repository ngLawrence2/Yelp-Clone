<!DOCTYPE html>
<html>
  <head>
    <title>YelpClone</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <% if current_user%>
      <script>
        window.current_user = {
          "id": <%= current_user.id %>,
          "email":"<%= current_user.email%>",
          "name": "<%=current_user.fname%>  <%=current_user.lname%>"
        };
      </script>
    <% end %>
    </script>

    <script type ="text/javascript">
      window.images = {
        session: "<%= asset_path('signup_illustration.png')%>",
        header_stars: "<%= asset_path('header_stars.png')%>",
        front_page: "<%= asset_path('front_page.jpg')%>"
      }
    </script>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
