<!DOCTYPE html>
<html>
  <head>
    <title>YelpClone</title>
    <link href="https://fonts.googleapis.com/css?family=Open+Sans" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css?family=Montserrat" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>

    <%= stylesheet_link_tag    'application', media: 'all' %>
    <%= javascript_include_tag 'application' %>

    <% if current_user%>
      <script>
        window.current_user = {
          "id": <%= current_user.id %>,
          "email":"<%= current_user.email%>",
          "fname": "<%=current_user.fname%>",
          "lname": "<%=current_user.lname%>"
        };
      </script>
    <% end %>
    </script>

    <script type ="text/javascript">
      window.images = {
        session: "<%= asset_path('signup_illustration.png')%>",
        header_stars: "<%= asset_path('header_stars.png')%>",
        front_page: "<%= asset_path('front_page.jpg')%>",
        logo: "<%= asset_path('yelpLogo.png') %>",
        restaurant: "<%= asset_path('restaurant.png') %>",
        nightlife: "<%= asset_path('nightlife.png') %>",
        homeServices: "<%= asset_path('homeServices.png') %>",
        delivery: "<%= asset_path('delivery.png') %>",
        search: "<%= asset_path('search.png') %>",
        camera: "<%=asset_path('addPhotoIcon.png')%>",
        saveIcon: "<%= asset_path('saveIcon.png')%>",
        share:"<%=asset_path('shareIcon.jpg')%>"
      }
    </script>

  </head>

  <body>
    <%= yield %>
  </body>
</html>
